

<h3>Create Goal</h3>
<form action="<%= goals_url %>" action="POST">

	<input type="hidden"
	name="authenticity_token"
	value="<%= form_authenticity_token %>">

	<label for="title">Title</label>
	<input type="text" name="goal[title]" id="title">

	<label for="body">Body</label>
	<textarea id="body" name="goal[body]"></textarea>

	<input type="radio" id="private" name="goal[private]" value="true">
	<label for="private">Private</label>

	<input type="radio" id="public" name="goal[private]" value="false">
	<label for="public">Public</label>

	<input type="submit" value= "Create goal">


</form>
